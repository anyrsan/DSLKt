<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>


        <variable
            name="pageChange"
            type="com.any.org.eanewsmudle.viewpresenter.PageChangeListener" />

        <variable
            name="adapter"
            type="androidx.fragment.app.FragmentPagerAdapter" />

        <variable
            name="vm"
            type="com.any.org.eanewsmudle.viewmodel.AMainViewModel" />

    </data>


    <RelativeLayout
        android:id="@+id/mainContainerRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff">


        <LinearLayout
            android:id="@+id/topLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newsTv"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="10dp"
                tools:text="国内要闻"
                android:text="@{vm.mTitle}"
                android:textSize="@dimen/ts_18"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_f4f4f4" />
        </LinearLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            app:bindVPAdapter="@{adapter}"
            app:bindPageChange="@{pageChange}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topLL" />

    </RelativeLayout>

</layout>